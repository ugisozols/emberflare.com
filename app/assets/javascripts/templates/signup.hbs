<div class="row entry">

  <div class="title">Sign up</div>
  <hr>

  {{#if signupFailed}}
    <div class="alert alert-danger">
      <button {{ action "clearWarning" }}type="button" class="close">&times;</button>
      <strong>Signup failed!</strong> Please double check that the values you provided meet the requirements mentioned below.
    </div>
  {{/if}}

  <div class="col-md-6">
    <form {{action 'signup' on='submit'}} class="form-horizontal" role="form">
    
      <div class="form-group">
        <label for="username" class="col-sm-2 control-label">Username</label>
        <div class="col-sm-10">
          {{view Ember.TextField class="form-control" id='username' value=username placeholder='Username'}}
        </div>
      </div>
      
      <div class="form-group">
        <label for="email" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-10">
          {{view Ember.TextField class="form-control" id='email' value=email placeholder='Email'}}
        </div>
      </div>
      
      <div class="form-group">
        <label for="password" class="col-sm-2 control-label">Password</label>
        <div class="col-sm-10">
          {{view Ember.TextField class="form-control" id='password' type='password' value=password placeholder='Password'}}
        </div>
      </div>
      
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          {{input type="submit" value="Sign up" disabled=fieldsEmpty class="btn btn-default"}}
        </div>
      </div>
    </form>
  </div>

  <div class="col-md-6">
    <div class="alert alert-info">
      A couple of things you should know:
      <br>
      <br>
      <ul>
        <li>Username - min: 2, max: 50</li>
        <li>Email - a valid one (used for avatars)</li>
        <li>Password - min: 6, max: 50</li>
      </ul>
    </div>
  </div>

</div>

<div class="row entry">

  <div class="title">Sign in</div>
  <hr>

  {{#if signinFailed}}
    <div class="alert alert-danger">
      <button {{ action "clearWarning" }}type="button" class="close">&times;</button>
      <strong>Sign in failed!</strong> Either the username or password was incorrect.
    </div>
  {{/if}}

  <form {{action 'authenticate' on='submit'}} class="form-horizontal">
    <div class="form-group">
      <label for="username" class="col-sm-2 control-label">Username</label>
      <div class="col-sm-10">
        {{view Ember.TextField class="form-control" id='username' value=identification placeholder='Username'}}
       </div>
     </div>
    <div class="form-group">
       <label for="password" class="col-sm-2 control-label">Password</label>
      <div class="col-sm-10">
        {{view Ember.TextField class="form-control" id='password' type='password' value=password placeholder='Password'}}
      </div>
    </div>
     <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn">Sign in</button>
      </div>
    </div> 
  </form>

</div>
